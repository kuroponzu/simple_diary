<div style="max-width: 500px; margin: 50px auto; padding: 20px; border: 1px solid #ddd; border-radius: 10px; background-color: #f9f9f9;">
  <h2 style="text-align: center; margin-bottom: 30px;">Sign In</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div style="margin-bottom: 20px;">
      <%= f.label :email, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 10px; font-size: 1em; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= f.label :password, style: "display: block; margin-bottom: 5px; font-weight: bold;" %>
      <%= f.password_field :password, autocomplete: "current-password", style: "width: 100%; padding: 10px; font-size: 1em; border: 1px solid #ddd; border-radius: 5px;" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div style="margin-bottom: 20px;">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, style: "margin-left: 5px;" %>
      </div>
    <% end %>

    <div style="margin-bottom: 20px;">
      <%= f.submit "Sign In", style: "width: 100%; padding: 12px; background-color: #28a745; color: white; border: none; border-radius: 5px; cursor: pointer; font-size: 1em; font-weight: bold;" %>
    </div>
  <% end %>

  <div style="text-align: center; margin-top: 20px; padding-top: 20px; border-top: 1px solid #ddd;">
    <div style="margin-bottom: 15px;">
      <%= link_to "Sign in with Passkey instead", new_webauthn_session_path, style: "color: #007bff; font-weight: bold;" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>
