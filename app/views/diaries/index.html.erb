<div style="max-width: 800px; margin: 0 auto; padding: 20px;">
  <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
    <h1>My Diaries</h1>
    <div>
      <%= link_to "New Diary", new_diary_path, style: "padding: 10px 20px; background-color: #007bff; color: white; text-decoration: none; border-radius: 5px;" %>
      <%= link_to "Manage Passkeys", credentials_path, style: "padding: 10px 20px; background-color: #6c757d; color: white; text-decoration: none; border-radius: 5px; margin-left: 10px;" %>
      <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, style: "padding: 10px 20px; background-color: #dc3545; color: white; text-decoration: none; border-radius: 5px; margin-left: 10px;" %>
    </div>
  </div>

  <% if @diaries.any? %>
    <% @diaries.each do |diary| %>
      <div style="border: 1px solid #ddd; padding: 15px; margin-bottom: 15px; border-radius: 5px;">
        <h2><%= link_to diary.title, diary_path(diary) %></h2>
        <p style="color: #666; font-size: 0.9em;">
          Created: <%= diary.created_at.strftime("%Y-%m-%d %H:%M") %>
        </p>
        <div>
          <%= link_to "View", diary_path(diary), style: "margin-right: 10px;" %>
          <%= link_to "Edit", edit_diary_path(diary), style: "margin-right: 10px;" %>
          <%= link_to "Delete", diary_path(diary), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, style: "color: red;" %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No diaries yet. Create your first diary!</p>
  <% end %>
</div>
